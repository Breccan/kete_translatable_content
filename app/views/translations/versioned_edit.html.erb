<% @button_text = t("translations.edit.update") -%>

<% if @translation.new_record? %>
  <% form_for(@translation) do |f| %>
<% else %>
  <% form_for(@translation, :url => { :action => :update,
  @translatable_key => @translated, :id => @translation.locale }) do |f| %>
<% end %>

<%= render :partial => f -%>

<% end %>
