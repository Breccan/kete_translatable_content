<% if  @basket.index_page_extra_side_bar_html.present? -%>
   <div class="translations-controls">
     <%= available_in_locales_for(@basket) -%>
     <%= needed_in_locales_for(@basket, :lightbox => true) -%>
  </div>
<% end -%>
<div class="form-element">
  <%= form.text_area :index_page_extra_side_bar_html, {:class => "mceEditor", :cols => 120, :rows => 10, :tabindex => '1'} %>
</div>
<div class="form_example">
  <%=t 'baskets.homepage_form.security_warning' %>
  <%=t 'baskets.homepage_form.security_warning_admin' if @site_admin %>
</div>
<% if @site_admin -%>
<div class="form-element">
  <%= form.check_box :do_not_sanitize, :tabindex => '1' %>
  <label for="basket_do_not_sanitize" class="inline"><%=t 'baskets.homepage_form.security_exception_example' %></label><br />
</div>
<% end -%>
